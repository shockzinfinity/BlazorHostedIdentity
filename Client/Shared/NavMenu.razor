<MudDrawer @bind-Open="SidebarOpen" Elevation="1">
  <MudDrawerHeader>
    <MudAvatar Color="Color.Transparent" Size="Size.Large" Image="assets/Polly-Logo.png" />
    <MudText Typo="Typo.h6" Color="Color.Primary" Style="margin-top: 10px; margin-left: 15px;">ironPot42.com</MudText>
  </MudDrawerHeader>
  <MudNavMenu>
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Filled.Home">Home</MudNavLink>
    <MudNavLink Href="/counter" Match="NavLinkMatch.All" Icon="@Icons.Filled.Exposure">Counter</MudNavLink>
    <MudNavLink Href="/products" Match="NavLinkMatch.All" Icon="@Icons.Filled.AllInbox">Products</MudNavLink>
    <MudNavLink Href="/profile" Match="NavLinkMatch.All" Icon="@Icons.Custom.Brands.MudBlazor">Profile</MudNavLink>
    <MudNavLink Href="/compTest" Match="NavLinkMatch.All" Icon="@Icons.Filled.SettingsInputComponent">Component Test</MudNavLink>
    <MudNavGroup Title="Expanding" Icon="@Icons.Filled.DashboardCustomize" Expanded="true">
      <MudNavLink Href="#" Icon="@Icons.Filled.Camera">Photos</MudNavLink>
      <MudNavLink Href="#" Icon="@Icons.Filled.Celebration">Party</MudNavLink>
    </MudNavGroup>
    <AuthorizeView Roles="Administrator">
      <Authorized>
        <MudNavLink Href="/fetchdata" Icon="@Icons.Filled.Storage">FetchData</MudNavLink>
      </Authorized>
    </AuthorizeView>
  </MudNavMenu>
</MudDrawer>


@code {
  [Parameter] public bool SidebarOpen { get; set; }
}