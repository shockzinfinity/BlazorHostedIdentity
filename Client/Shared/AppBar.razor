<MudAppBar Elevation="3">
  <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="async () => await OnSidebarToggled.InvokeAsync()" />
  <MudAppBarSpacer />
  <LoginDisplay />
  @if (_isLightMode)
  {
    <MudIconButton Icon="@Icons.Material.Filled.Brightness4" OnClick="ToggleTheme" />
  }
  else
  {
    <MudIconButton Icon="@Icons.Material.Filled.Brightness5" OnClick="ToggleTheme" />
  }
</MudAppBar>
